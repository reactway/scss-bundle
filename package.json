{
    "name": "scss-bundle",
    "version": "3.0.0",
    "description": "Bundling SCSS files to one bundled file.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
        "start": "node dist/cli/main.js",
        "pretest": "tsc -p . --noEmit && eslint \"src/**/*.ts*\"",
        "test": "npm run build-tests && jest",
        "build-tests": "test-generator-cli"
    },
    "keywords": [
        "scss",
        "bundle",
        "sass",
        "node-sass"
    ],
    "files": [
        "dist",
        "**/*.md",
        "*.js",
        "!*.config.js"
    ],
    "author": "ReactWay <dev@reactway.com> (https://github.com/reactway)",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.17",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "@reactway/eslint-config": "^1.0.0-alpha.2",
        "eslint": "^6.1.0",
        "typescript": "^3.5.3",
        "@simplrjs/test-generator-cli": "^0.1.3",
        "jest-junit": "^7.0.0"
    },
    "dependencies": {
        "@types/archy": "^0.0.31",
        "@types/debug": "^4.1.4",
        "@types/fs-extra": "^8.0.0",
        "@types/glob": "^7.1.1",
        "@types/lodash.debounce": "^4.0.6",
        "@types/node-sass": "^4.11.0",
        "@types/sass": "^1.16.0",
        "archy": "^1.0.0",
        "chalk": "^2.4.2",
        "chokidar": "^3.0.2",
        "commander": "^2.20.0",
        "fs-extra": "^8.1.0",
        "globs": "^0.1.4",
        "lodash.debounce": "^4.0.8",
        "loglevel": "^1.6.3",
        "loglevel-plugin-prefix": "^0.8.4",
        "pretty-bytes": "^5.3.0",
        "sass": "^1.22.9"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1"
        },
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/__tests__/*",
            "!src/index.ts",
            "!src/cli/**/*"
        ],
        "coverageReporters": [
            "cobertura"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "./tests/tsconfig.json"
            }
        }
    }
}
